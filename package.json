{
  "name": "haas",
  "version": "1.0.0",
  "displayName": "HAAS - HKT Assign & Attendance System",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:unit:watch": "jest --testPathPattern=__tests__/unit --watch",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:integration:watch": "jest --testPathPattern=__tests__/integration --watch",
    "test:e2e": "playwright test",
    "test:e2e:ci": "playwright test --config=playwright.config.ci.ts",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "mcp:setup": "npm install -g @playwright/mcp-server @supabase/mcp-server-supabase github-actions-mcp-server",
    "mcp:start:playwright": "npx @playwright/mcp-server",
    "mcp:start:supabase": "npx @supabase/mcp-server-supabase --read-only --project-ref ${SUPABASE_PROJECT_REF}",
    "mcp:start:github": "npx github-actions-mcp-server",
    "mcp:start:jest": "node scripts/mcp/jest-test-server.mjs",
    "mcp:start:navigation": "node scripts/mcp/haas-navigation-server.mjs",
    "mcp:start:build-dev": "node scripts/mcp/build-dev-server.mjs",
    "mcp:start:supabase-ops": "node scripts/mcp/supabase-ops-server.mjs",
    "mcp:test:generate": "node scripts/mcp/generate-tests.mjs",
    "mcp:validate": "node -e \"console.log('MCP Config:', require('./mcp-config.json'))\"",
    "lint": "next lint",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.4.0",
    "@supabase/supabase-js": "^2.45.0",
    "@yudiel/react-qr-scanner": "^2.3.1",
    "autoprefixer": "^10.4.19",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "lucide-react": "^0.544.0",
    "next": "^14.2.7",
    "postcss": "^8.4.41",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-qr-code": "^2.0.18",
    "tailwindcss": "^3.4.10",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "eslint": "^8.0.0",
    "eslint-config-next": "14.2.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.11.3",
    "typescript": "^5.5.4"
  }
}
